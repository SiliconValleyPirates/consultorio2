CREATE TABLE PACIENTES
   (
      RUT         VARCHAR(14) NOT NULL constraint RUT primary key,
      NOMBRE      VARCHAR(25) NOT NULL,
      APELLIDO    VARCHAR(25) NOT NULL,
      FECHA_DE_NACIMIENTO DATE,
      
   );
CREATE TABLE MEDICOS
(
      RUT VARCHAR(15) NOT NULL constraint RUT primary key,
      NOMBRE VARCHAR(25) NOT NULL,
      APELLIDO VARCHAR (25) NOT NULL,
      ESPECIALIDAD VARCHAR (50) NOT NULL,
);


CREATE TABLE CONSULTAS_MEDICAS
(   
    CODIGO_CONSULTA INTEGER NOT NULL generated always as identity constraint CODIGO_ CONSULTA primary key,
    RUT_PACIENTE VARCHAR (15) NOT NULL,
    RUT_MEDICO VARCHAR (15) NOT NULL, 
    FECHA_CONSULTA DATE NOT NULL,
    DIAGNOSTICO VARCHAR(200) NOT NULL,
    TRATAMIENTO VARCHAR (200) NOT NULL,
    TIPO_CONSULTA CHAR(1) NOT NULL,
);

CREATE TABLE DETALLE_CONSULTAS
(
    CODIGO_CONSULTA INTEGER NOT NULL,
    CODIGO_EXAMEN INTEGER NOT NULL,
    SOLICITADO CHAR(1) NOT NULL,
);
